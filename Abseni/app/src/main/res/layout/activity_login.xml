<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/bg_login"
        ></FrameLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Login.MainActivity">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/img_logo"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:outlineSpotShadowColor="#ffffff"
                />
            <View
                android:id="@+id/space_1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/img_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pesan"
                android:layout_below="@+id/space_1"
                android:textColor="#ffffff"
                android:text="Mulailah bekerja dengan menularkan positif pada sekitar"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:textAlignment="center"
                android:textSize="15dp"
                />

            <View
                android:id="@+id/space_3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/txt_pesan"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cd_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/space_3"
                android:layout_marginStart="75dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        />
                    <EditText
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="14dp"
                        android:hint="Email/Username"
                        android:background="@null"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/space_2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/cd_1"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cd_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/space_2"
                android:layout_marginStart="75dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    />
                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="14dp"
                    android:background="@null"
                    android:paddingStart="20dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/space_4"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/cd_2"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_below="@+id/space_4"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/button_green_background"
                android:elevation="2dp"
                />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
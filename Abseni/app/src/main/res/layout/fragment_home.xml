<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/design_back"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home.HomeFragment"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/ep_biru_muda"/>

            <Button
                android:id="@+id/btn_izin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_izin"
                android:shadowColor="@color/colorNull"
                android:text="     Histori Perizinan"
                android:textAlignment="textStart"
                android:textColor="#666666"
                android:textSize="14dp"
                android:theme="@style/buttonstyle1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:elevation="1dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="     Cuti"
                    android:id="@+id/btn_cuti"
                    android:drawableLeft="@drawable/ic_out"
                    android:textSize="14dp"
                    android:textColor="#666666"
                    android:textAlignment="textStart"
                    android:theme="@style/buttonstyle1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    />

                <Button
                    android:id="@+id/btn_poin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_point"
                    android:text="     Poin"
                    android:textColor="#666666"
                    android:textAlignment="textStart"
                    android:textSize="14dp"
                    android:theme="@style/buttonstyle1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/radius_background"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:elevation="2dp">

            <Button
                android:id="@+id/btn_checkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Check In"
                android:background="@drawable/button_green_background"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Check Out"
                android:background="@drawable/button_green_background"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

        </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recy_history"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
    </LinearLayout>
</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ep_biru</item>
        <item name="colorPrimaryDark">@color/ep_biru</item>
        <item name="colorAccent">@color/ep_biru</item>
    </style>

    <style name="textbold" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textregular" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Button -->
    <style name="buttonstyle1" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorOrange</item>
        <item name="colorButtonNormal">#8000BCD4</item>
    </style>

</resources>
